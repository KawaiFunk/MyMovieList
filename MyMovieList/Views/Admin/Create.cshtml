@model MyMovieList.Web.Models.UserModel
@{
    ViewData["Title"] = "CREATE USER";
}

<br />

<div class="container pt-0 pb-3">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="mb-0">Create User</h1>
        <a asp-action="Index" class="btn btn-primary">Back</a>
    </div>
</div>
<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter name"/>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="Enter email"/>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" placeholder="Enter password" type="password"/>
    </div>
    <div class="form-check pb-2 pt-2">
        <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked="">
        <label class="form-check-label" for="flexCheckChecked">
            Create user with admin privileges
        </label>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>